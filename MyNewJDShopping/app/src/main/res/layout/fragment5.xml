                    android:src="@mipmap/dpj"
                    android:layout_gravity="center"
                    /> <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/th_sh"
