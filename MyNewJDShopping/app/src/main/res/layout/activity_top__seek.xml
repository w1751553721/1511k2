<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <ImageButton
        android:id="@+id/img1"
        android:layout_width="30dp"
        android:layout_marginTop="12dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/zing"
        />
    <EditText
        android:id="@+id/edit"
        android:layout_width="260dp"
        android:paddingLeft="10dp"
        android:layout_height="30dp"
        android:focusable="false"
        android:textSize="14dp"
        android:background="@drawable/topcontent"
        android:layout_alignTop="@+id/img1"
        android:layout_toEndOf="@+id/img1" />
    <ImageView
        android:id="@+id/img2"
        android:layout_toRightOf="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_marginLeft="-65dp"
        android:layout_marginTop="13dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:background="@mipmap/root"
        />
    <ImageView
        android:id="@+id/img3"
        android:layout_toRightOf="@+id/edit"
        android:layout_width="25dp"
        android:layout_alignLeft="@+id/edit"
        android:layout_marginTop="15dp"
        android:layout_height="25dp"
        android:layout_marginLeft="4dp"
        android:scaleType="fitXY"
        android:background="@mipmap/seekicon"
        />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/img3"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/edit"
        android:background="@mipmap/xiaoxi" />
</RelativeLayout>
